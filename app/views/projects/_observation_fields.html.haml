.nested-fields
  .row
    .col-md-6
      = f.input :action_plan, input_html: { class: 'form-control' }
    .col-md-6
      = f.input :office_date, as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%d/%m/%Y') }
  .row
    .col-md-12
      = f.input :office_observation, input_html: { class: 'form-control' }
  .row
    .col-md-6
      = f.input :due_date, as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%d/%m/%Y') }
    .col-md-6
      = f.input :responsible, input_html: { class: 'form-control' }
  .row
    .col-md-12
      .form-check
        %label.form-check-label
          = f.input :meet, input_html: { class: 'form-check-input' }
  .row
    .col-md-6
      = f.input :office_breach, input_html: { class: 'form-control' }
    .col-md-6
      = f.input :breach_date, as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%d/%m/%Y') }
  .row
    .col-md-6
      = f.input :term_second, input_html: { class: 'form-control' }
    .col-md-6
      = f.input :responsible_second, input_html: { class: 'form-control' }
  .row
    .col-md-12
      .form-check
        %label.form-check-label
          = f.input :meet_second, input_html: { class: 'form-check-input' }
  %p
    = link_to_remove_association "Quitar observaci√≥n", f, class: 'btn btn-outline-info'
