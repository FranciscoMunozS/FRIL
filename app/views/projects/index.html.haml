%table.table.table-hover
  %thead
    %tr
      %th
        Nombre proyecto
      %th
        Comuna
      %th
        Origen de visita
      %th
        Fecha visita
      %th
        Linea FRIL
      %th
        IDI
      %th
        Cartilla visita
      %th
        Reporte cometido
      %th(colspan="2")
        Opciones
  %tbody
    - @projects.each do |project|
      %tr
      - if project.tracing == true
        %td= project.project_name.capitalize
        %td= project.commune.capitalize
        %td= project.origin_visit.capitalize
        %td= project.date_visit.try(:strftime, "%d/%m/%y")
        %td= project.line
        %td= project.idi
        %td= project.visit_booklet.capitalize
        %td= project.report_made.capitalize
        %td= link_to 'Ver detalles', project, class: 'btn btn-outline-secondary btn-sm'
        %td= link_to 'Eliminar', project, method: :delete, data: { confirm: "Esta seguro?" }, class: 'btn btn-outline-danger btn-sm'
